<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Doser.Theme" parent="MaterialDrawerTheme">
        <item name="windowActionBar">false</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/background</item>
        <item name="material_drawer_primary_text">@color/text_color</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/product_list_selection</item>
        <item name="material_drawer_selected_text">@color/text_color</item>
    </style>

    <style name="DoserActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar_gradient</item>
        <item name="background">@drawable/action_bar_gradient</item>
        <item name="android:icon">@mipmap/ic_launcher</item>
    </style>

    <style name="DoserTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">fonts/LiberationSans-Regular.ttf</item>
    </style>

    <style name="DoserEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_color</item>
        <item name="fontPath">fonts/LiberationSans-Regular.ttf</item>
        <item name="android:background">#353535</item>
    </style>

    <style name="DoserButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_selector</item>
        <item name="android:textColor">#FFFFFF</item>                                 
        <item name="textAllCaps">false</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>


</resources>