<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SeachemDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorLink">@color/link_color</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/SeachemActionBar</item>
        <item name="actionBarStyle">@style/SeachemActionBar</item>
        <item name="android:textViewStyle">@style/SeachemTextView</item>
        <item name="editTextStyle">@style/SeachemEditText</item>
        <item name="buttonStyle">@style/SeachemButton</item>
        <item name="android:panelFullBackground">@color/background</item>
        <item name="android:actionMenuTextColor" tools:targetApi="11">@color/text_color</item>
    </style>

    <style name="SeachemActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar_gradient</item>
        <item name="background">@drawable/action_bar_gradient</item>
        <item name="android:icon">@drawable/ic_launcher</item>
    </style>

    <style name="SeachemTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">fonts/LiberationSans-Regular.ttf</item>
    </style>

    <style name="SeachemEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_color</item>
        <item name="fontPath">fonts/LiberationSans-Regular.ttf</item>
        <item name="android:background">#353535</item>
    </style>

    <style name="SeachemButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_selector</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps" tools:targetApi="14">false</item>
    </style>

</resources>