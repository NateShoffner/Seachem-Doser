<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DoserEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="DoserButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@drawable/button_background_selector</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:minHeight">1dip</item>
        <item name="android:minWidth">1dip</item>
    </style>

    <style name="DoserToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/titleTextColor</item>
        <item name="android:textColorPrimaryInverse">@color/titleTextColor</item>
        <item name="android:textColorSecondary">@color/titleTextColor</item>
        <item name="actionMenuTextColor">@color/titleTextColor</item>
        <item name="titleTextColor">@color/titleTextColor</item>
        <item name="subtitleTextColor">@color/subtitleTextColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/titleTextColor</item>
    </style>

</resources>